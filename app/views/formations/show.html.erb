        <% elsif @formation.name == "Technicien PNL" %>
          <a href="https://www.moncompteformation.gouv.fr/espace-prive/html/#/formation/recherche/84935804900013_PNL/84935804900013_PNL" class="btn btn-ghost btn-lg active" role="button" aria-pressed="true">Inscrivez-vous</a>
        <% elsif @formation.name == "Developpement personnel ( coaching )" %>
          <a href="https://www.moncompteformation.gouv.fr/espace-prive/html/#/formation/recherche/84935804900013_PNL/84935804900013_PNL" class="btn btn-ghost btn-lg active" role="button" aria-pressed="true">Inscrivez-vous</a>
