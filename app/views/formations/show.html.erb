<div class="vertical-center">
  <div class="row justify-content-around">
    <div class="col-sm-8 text-center"><b><%= @formation.name.capitalize %></b><br><br>
      <div class="text-left"><%= simple_format(@formation.description) %>
      </div><br><br>
            <div class="d-flex justify-content-around">
        <a href="/contacts/new" class="btn btn-ghost btn-lg active" role="button" aria-pressed="true">Contactez-nous</a>
        <% if @formation.name == "Bilan individuel de competences" %>
          <a href="https://www.moncompteformation.gouv.fr/espace-prive/html/#/formation/recherche/84935804900013_15081/84935804900013_BCP001" class="btn btn-ghost btn-lg active" role="button" aria-pressed="true">Inscrivez-vous</a>
